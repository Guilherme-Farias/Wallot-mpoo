<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:padding="15dp"
    android:id="@+id/layout_orcamento"
    android:background="@drawable/card_recycler_background">

    <TextView
        android:id="@+id/titulo_orcamento_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/bold"
        android:text="Titulo"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/gasto_planejado_orcamento_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:gravity="right"
        android:layout_toEndOf="@+id/titulo_orcamento_list"
        android:layout_toRightOf="@+id/titulo_orcamento_list"
        android:fontFamily="@font/bold"
        android:text="R$0.00" />

    <TextView
        android:id="@+id/data_inicio_orcamento_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo_orcamento_list"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:text="Categoria/Subcategoria" />
    <TextView
        android:id="@+id/data_final_orcamento_list"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gasto_planejado_orcamento_list"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="65dp"
        android:gravity="right"
        android:layout_toRightOf="@+id/data_inicio_orcamento_list"
        android:text="Tipo de status"/>


</RelativeLayout>
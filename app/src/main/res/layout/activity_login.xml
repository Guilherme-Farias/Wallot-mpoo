<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background"
    app:layout_constrainedHeight="true"
    app:layout_constrainedWidth="true"
    tools:context=".usuario.gui.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:contentDescription="wallot_logo"
        app:srcCompat="@drawable/logo_app_wallot" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="99dp"
        android:fontFamily="@font/bold"
        android:text="Login:"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/edittext_email_login"
        android:layout_width="310dp"
        android:layout_height="50sp"
        android:ems="10"
        android:inputType="textWebEmailAddress"
        android:hint="Email"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:textColorHint="@color/grey"
        android:background="@drawable/input_field"
        android:maxWidth="500dp"
        android:paddingLeft="20dp"
        android:paddingTop="0dp"
        android:paddingRight="20dp"
        android:paddingBottom="0dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/edittext_senha_login"
        android:layout_width="310dp"
        android:layout_height="50sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:maxWidth="500dp"
        android:paddingLeft="20dp"
        android:paddingTop="0dp"
        android:paddingRight="20dp"
        android:paddingBottom="0dp"
        android:background="@drawable/input_field"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColorHint="@color/grey" />

    <Button
        android:id="@+id/loggin_button"
        android:layout_width="162dp"
        android:layout_height="53dp"
        android:background="@drawable/button"
        android:fontFamily="@font/regular"
        android:text="Entrar"
        android:layout_marginRight="73dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:maxWidth="450dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="50dp"
        android:layout_marginTop="119dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/light"
            android:text="NÃ£o possui uma conta? "
            android:textColor="@color/grey"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textview_registrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:text="Registre-se"
            android:textColor="@color/dark_green" />


    </LinearLayout>
</LinearLayout>
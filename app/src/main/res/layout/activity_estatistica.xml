<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".orcamento.gui.EstatisticaActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VALOR GASTO ESSE MES"/>
        <TextView
            android:id="@+id/gasto_esse_mes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VALOR PLANEJADO ESSE MES"/>
        <TextView
            android:id="@+id/planejado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ESPECTATIVA FINAL MES"/>
        <TextView
            android:id="@+id/espectativa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx"/>
    </LinearLayout>

</LinearLayout>
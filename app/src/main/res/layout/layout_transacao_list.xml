<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:padding="15dp"
    android:id="@+id/layout_transacao"
    android:background="@drawable/card_recycler_background">


    <de.hdodenhof.circleimageview.CircleImageView
        android:padding="5dp"
        android:id="@+id/imagem_transacao_list"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/titulo_transacao_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/imagem_transacao_list"
        android:fontFamily="@font/bold"
        android:text="Titulo"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/valor_transacao_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:gravity="right"
        android:layout_toEndOf="@+id/titulo_transacao_list"
        android:layout_toRightOf="@+id/titulo_transacao_list"
        android:fontFamily="@font/bold"
        android:text="R$0.00" />

    <TextView
        android:id="@+id/categoria_subcategoria_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo_transacao_list"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/imagem_transacao_list"
        android:text="Categoria/Subcategoria" />
    <TextView
        android:id="@+id/tipo_status_list"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valor_transacao_list"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="65dp"
        android:gravity="right"
        android:layout_toRightOf="@+id/categoria_subcategoria_list"
        android:text="Tipo de status"/>



    <TextView
        android:id="@+id/conta_transacacao_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/imagem_transacao_list"
        android:layout_below="@+id/categoria_subcategoria_list"
        android:layout_marginTop="12dp"
        android:text="Conta" />

    <TextView
        android:id="@+id/data_transacao_list"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tipo_status_list"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="65dp"
        android:gravity="right"
        android:layout_toRightOf="@+id/conta_transacacao_list"
        android:text="dd/MM/yyyy" />

</RelativeLayout>
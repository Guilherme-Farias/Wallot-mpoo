<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".infra.gui.TransacaoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição"
            android:textSize="19sp"
            android:textColor="#228B22"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edit_descricao"
            android:hint="Descrição"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valor"
            android:textSize="19sp"
            android:textColor="#228B22"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edit_valor"
            android:hint="Valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoria"
            android:textSize="19sp"
            android:textColor="#228B22"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edit_categoria"
            android:hint="Categoria"
            android:layout_width="match_parent"
            android:enabled="false"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"/>


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subcategoria"
            android:textSize="19sp"
            android:textColor="#228B22"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edit_sub_categoria"
            android:hint="SubCategoria"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conta"
            android:textSize="19sp"
            android:textColor="#228B22"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spn_contas"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/strData"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:layout_height="40dp"
            android:text="Dia/Mês/Ano"
            android:textSize="18sp"
            android:background="@drawable/buttonboxtransparent"
            android:layout_marginBottom="50dp"
            />

        <Button
            android:id="@+id/button_salvar_pagamento"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Salvar"
            android:background="@drawable/buttonbox"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            />
    </LinearLayout>


</ScrollView>